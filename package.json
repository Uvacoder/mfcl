{
  "name": "mfcl",
  "version": "0.1.0",
  "private": false,
  "description": "React Component Library for UI consistency between repositories",
  "main": "dist/index.js",
  "jsnext:main": "dist/index.es.js",
  "engines": {
    "node": ">=12.18.0"
  },
  "scripts": {
    "build": "node ./scripts/buildDist && rollup -c",
    "build:web": "docz build",
    "dev": "yarn start",
    "lint": "eslint ./src",
    "plop": "plop",
    "start": "docz dev",
    "stylelint": "stylelint ./src",
    "test": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:coverage": "yarn test --coverage",
    "test:watch": "react-scripts test --env=jsdom",
    "watch": "rollup -c -w",
    "x": "node ./scripts/buildDist"
  },
  "peerDependencies": {
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^26.3.0",
    "colors": "^1.3.3",
    "cross-env": "^7.0.2",
    "css-loader": "^4.2.1",
    "docz": "^2.3.1",
    "eslint": "^7.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.5.0",
    "eslint-config-react-app": "^5.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-hooks": "^4.0.8",
    "jest": "^26.3.0",
    "node-sass": "^4.13.0",
    "plop": "^2.5.3",
    "prettier": "^2.0.5",
    "react": "^16.11.0",
    "react-component-component": "^1.2.1",
    "react-dom": "^16.11.0",
    "react-scripts": "^3.2.0",
    "react-transition-group": "^4.4.1",
    "rollup": "^2.23.1",
    "rollup-plugin-babel": "^4.0.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^3.1.5",
    "rollup-plugin-url": "^3.0.0",
    "sass-loader": "^9.0.3",
    "stylelint": "^13.6.1",
    "stylelint-config-css-modules": "^2.0.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended-scss": "^4.0.0",
    "stylelint-declaration-use-variable": "^1.7.2",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.12.1",
    "stylelint-webpack-plugin": "^2.1.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/icons/**",
      "!**/utils/**",
      "!src/index.js",
      "!src/setupTests.js"
    ]
  },
  "files": [
    "dist"
  ]
}
